<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#FFFEFE"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginHorizontal="2dp"
        android:elevation="10dp"
        android:background="@drawable/img_rect">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img1"
            app:shapeAppearanceOverlay="@style/ImageView.Corner"></com.google.android.material.imageview.ShapeableImageView>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginVertical="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/medium"
            android:text="REVAMP"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/medium"
            android:text="Class Room Automation"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <EditText
                    android:fontFamily="@font/medium"
                    android:id="@+id/et1"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/trans_rect"
                    android:gravity="center"
                    android:textColorHint="@color/black"
                    android:textSize="16dp"
                    android:hint="Email or Phone"></EditText>

                <EditText
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:fontFamily="@font/medium"
                    android:id="@+id/et2"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/trans_rect"
                    android:gravity="center"
                    android:textColorHint="@color/black"
                    android:textSize="16dp"
                    android:hint="Password"></EditText>
                <TextView
                    android:layout_marginHorizontal="40dp"
                    android:fontFamily="@font/medium"
                    android:id="@+id/ForgotPass"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Forgot Password"
                    android:textColor="#454545"
                    android:textSize="15dp"></TextView>


                <android.support.v7.widget.CardView
                    android:id="@+id/login"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="10dp">
                    <TextView
                        android:layout_marginHorizontal="40dp"
                        android:fontFamily="@font/medium"
                        android:id="@+id/signIn"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Log In"
                        android:textColor="@color/black"
                        android:textSize="20dp"></TextView>
                </android.support.v7.widget.CardView>
                <TextView
                    android:fontFamily="@font/medium"
                    android:id="@+id/signUp"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign Up"
                    android:textColor="@color/black"
                    android:textSize="20dp"></TextView>



            </LinearLayout>




        </android.support.v7.widget.CardView>



    </RelativeLayout>



</LinearLayout>